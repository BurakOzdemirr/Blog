@model IEnumerable<EntityLayer.Concrete.Contact>
@{
    ViewBag.Title = "SendBox";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                       
                        <h4 class="page-title">Gelen Kutusu</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->


            <div class="row">

                <!-- Right Sidebar -->
                <div class="col-12">
                    <div class="card-box">
                        <!-- Left sidebar -->
                        <div class="inbox-leftbar">

                            <a href="email-compose.html" class="btn btn-danger btn-block waves-effect waves-light">Mesaj Oluştur</a>

                            <div class="mail-list mt-4">
                                <a href="/Contact/SendBox/" class="text-danger font-weight-bold"><i class="dripicons-inbox mr-2"></i>Gelen Kutusu<span class="badge badge-soft-danger float-right ml-2">2</span></a>
                                <a href="javascript: void(0);"><i class="dripicons-star mr-2"></i>Yıldızlı</a>
                                <a href="javascript: void(0);"><i class="dripicons-clock mr-2"></i>Ertelendi</a>
                                <a href="javascript: void(0);"><i class="dripicons-document mr-2"></i>Taslaklar<span class="badge badge-soft-info float-right ml-2">0</span></a>
                                <a href="/Contact/Outbox/"><i class="dripicons-exit mr-2"></i>Gönderilenler <span class="badge badge-soft-success float-right ml-2">0</span></a>
                                <a href="javascript: void(0);"><i class="dripicons-trash mr-2"></i>Çöp Kutusu <span class="badge badge-soft-primary float-right ml-2">0</span></a>
                                <a href="javascript: void(0);"><i class="dripicons-trash mr-2"></i>Tanıtımlar <span class="badge badge-soft-blue float-right ml-2">0</span></a>
                                <a href="javascript: void(0);"><i class="dripicons-tag mr-2"></i>Önemli</a>
                                <a href="javascript: void(0);"><i class="dripicons-warning mr-2"></i>Spam <span class="badge badge-soft-pink float-right ml-2">0</span></a>
                            </div>

                            <h6 class="mt-4">Hazır Mesajlar</h6>

                            <div class="list-group b-0 mail-list">
                                <a href="#" class="list-group-item border-0"><span class="mdi mdi-circle text-info mr-2"></span>Sosyal Medya Mesajları</a>
                                <a href="#" class="list-group-item border-0"><span class="mdi mdi-circle text-warning mr-2"></span>Tanıtımlar</a>
                                <a href="#" class="list-group-item border-0"><span class="mdi mdi-circle text-dark mr-2"></span>Mail Bülteni</a>
                                <a href="#" class="list-group-item border-0"><span class="mdi mdi-circle text-primary mr-2"></span>Arkadaşlar</a>
                                <a href="#" class="list-group-item border-0"><span class="mdi mdi-circle text-success mr-2"></span>Aile</a>
                            </div>

                        </div>
                        <!-- End Left sidebar -->

                        <div class="inbox-rightbar">

                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-light waves-effect"><i class="mdi mdi-archive font-18"></i></button>
                                <button type="button" class="btn btn-sm btn-light waves-effect"><i class="mdi mdi-alert-octagon font-18"></i></button>
                                <button type="button" class="btn btn-sm btn-light waves-effect"><i class="mdi mdi-delete-variant font-18"></i></button>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-light dropdown-toggle waves-effect" data-toggle="dropdown" aria-expanded="false">
                                    <i class="mdi mdi-folder font-18"></i>
                                    <i class="mdi mdi-chevron-down"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <span class="dropdown-header">Taşı</span>
                                    <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Promosyonlar</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Güncellemeler</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Forumlar</a>
                                </div>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-light dropdown-toggle waves-effect" data-toggle="dropdown" aria-expanded="false">
                                    <i class="mdi mdi-label font-18"></i>
                                    <i class="mdi mdi-chevron-down"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <span class="dropdown-header">Label as:</span>
                                    <a class="dropdown-item" href="javascript: void(0);">Güncellemeler</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Promosyonlar</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Forumlar</a>
                                </div>
                            </div>

                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-light dropdown-toggle waves-effect" data-toggle="dropdown" aria-expanded="false">
                                    <i class="mdi mdi-dots-horizontal font-18"></i> Daha
                                    <i class="mdi mdi-chevron-down"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <span class="dropdown-header">Daha Fazla Seçenek :</span>
                                    <a class="dropdown-item" href="javascript: void(0);">Okunmadı Olarak İşaretle</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Görevlere Ekle</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Yıldız Ekle</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Sessize Al</a>
                                </div>
                            </div>

                            <div class="mt-3">
                                
                                <ul class="message-list">
                                    @foreach (var item in Model)
                                    {
                                        <li class="unread">
                                            <div class="col-mail col-mail-1">
                                                <div class="checkbox-wrapper-mail">
                                                    <input type="checkbox" id="chk1">
                                                    <label for="chk1" class="toggle"></label>
                                                </div>
                                                <span class="star-toggle far fa-star text-warning"></span>
                                                <a href="/Contact/MessageDetails/@item.ContactID" class="title">@item.Name @item.SurName</a>
                                            </div>
                                            <div class="col-mail col-mail-2">
                                                <a href="#" class="subject">
                                                    @item.Subject &nbsp;&ndash;&nbsp;
                                                    @item.Message.Substring(0, item.Message.Substring(0, 50).LastIndexOf(" "))
                                                    <span class="teaser">Lucas - Very cool :) Nicklas, You have a new direct message.</span>
                                                </a>
                                                <div class="date">@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</div>
                                            </div>
                                        </li>

                                     
                                    }

                                    </ul>
                                </div>
                            <!-- end .mt-4 -->

                            <div class="row">
                                <div class="col-7 mt-1">
                                    Showing 1 - 20 of 289
                                </div> <!-- end col-->
                                <div class="col-5">
                                    <div class="btn-group float-right">
                                        <button type="button" class="btn btn-light btn-sm"><i class="mdi mdi-chevron-left"></i></button>
                                        <button type="button" class="btn btn-info btn-sm"><i class="mdi mdi-chevron-right"></i></button>
                                    </div>
                                </div> <!-- end col-->
                            </div>
                                
                            <!-- end row-->
                        </div>
                        <!-- end inbox-rightbar-->

                        <div class="clearfix"></div>
                    </div> <!-- end card-box -->

                </div> <!-- end Col -->
            </div><!-- End row -->

        </div> <!-- container -->

    </div> <!-- content -->

