@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">

                    <h4 class="page-title">Blog Listesi</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->
        <!-- end row -->

        <div class="row">
            <div class="col-12">
                <div class="card-box">
                    <button type="button" class="btn btn-sm btn-blue waves-effect waves-light float-right">
                        <i class="mdi mdi-plus-circle"></i> Yeni Blog Ekle
                    </button>
                    <h4 class="header-title mb-4">Bloglar Hızlı Bakış </h4>
                    <div class="table-responsive">
                    <table class="table table-hover m-0 table-centered dt-responsive nowrap w-100" id="tickets-table">
                        <thead>
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>Blog Başlığı</th>
                                <th>Blog Yazarı</th>
                                <th>Kategori</th>
                                <th>Beğeni</th>
                                <th>Araçlar</th>
                                <th class="hidden-sm">Action</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach(var item in Model)
                            {
                            <tr>
                                <td><b>@item.BlogID</b></td>
                                <td>
                                    @item.BlogTitle
                                </td>

                                <td>
                                    <a href="javascript: void(0);" class="text-body">
                                        <img src="@item.Author.AuthorImage" alt="contact-img" title="contact-img" class="rounded-circle avatar-xs" />
                                        <span class="ml-2">@item.Author.AuthorName</span>
                                    </a>
                                </td>

                                <td>
                                    <span class="badge bg-soft-danger text-danger">@item.Category.CategoryName</span>
                                </td>

                                <td>
                                    <div class="progress mb-2">
                                        <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <small>%50 Tamamlandı</small>
                                </td>

                                

                                <td>
                                    <a class="btn btn-primary btn-sm" href="/Blog/BlogDetails/@item.BlogID"><i class="fe-airplay"></i>Sitede Gör</a>
                                    <a class="btn btn-success btn-sm" href="/Blog/UpdateBlog/@item.BlogID"><i class="fe-edit"></i>Düzenle</a>
                                    <a class="btn btn-danger btn-sm" href="/Blog/DeleteBlog/@item.BlogID"><i class="fe-trash-2"></i>Sil</a>
                                </td>

                                <td>
                                    <div class="btn-group dropdown">
                                        <a href="javascript: void(0);" class="table-action-btn dropdown-toggle arrow-none btn btn-light btn-sm" data-toggle="dropdown" aria-expanded="false"><i class="mdi mdi-dots-horizontal"></i></a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="/Blog/UpdateBlog/@item.BlogID"><i class="mdi mdi-pencil mr-2 text-muted font-18 vertical-middle"></i>Blog Düzenle</a>
                                            <a class="dropdown-item" href="/Blog/DeleteBlog/@item.BlogID"><i class="mdi mdi-delete mr-2 text-muted font-18 vertical-middle"></i>Sil</a>
                                            <a class="dropdown-item" href="/Blog/BlogStatusTrue/@item.BlogID"><i class="mdi mdi-check-all mr-2 text-muted font-18 vertical-middle"></i>Aktif Yap</a>
                                            <a class="dropdown-item" href="/Blog/BlogStatusFalse/@item.BlogID"><i class="mdi mdi-delete mr-2 text-muted font-18 vertical-middle"></i>Pasif Yap</a>

                                        </div>
                                    </div>
                                </td>
                            </tr>


                            }
                        </tbody>

                    </table>
                        </div>
                </div>
            </div><!-- end col -->
        </div>
        <!-- end row -->

    </div> <!-- container -->

</div> <!-- content -->
