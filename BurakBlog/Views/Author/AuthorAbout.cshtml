@model IEnumerable<EntityLayer.Concrete.Blog>
@foreach (var item in Model)
{
<div class="sidebar-box">
    <div class="bio text-center">
        <img src="@item.Author.AuthorImage" alt="Image Placeholder" class="img-fluid mb-5">
        <div class="bio-body">
            <h2>@item.Author.AuthorName</h2>
            <p class="mb-4">@item.Author.AuthorAbout</p>
            <p><a href="/About/Index/" class="btn btn-primary btn-sm rounded px-4 py-2">Devamını Oku..</a></p>
            <p class="social">
                <a href="@item.Author.Facebook" class="p-2"><span class="fa fa-facebook"></span></a>
                <a href="@item.Author.Twitter" class="p-2"><span class="fa fa-twitter"></span></a>
                <a href="@item.Author.Instagram" class="p-2"><span class="fa fa-instagram"></span></a>
                <a href="@item.Author.Linkedin" class="p-2"><span class="fa fa-linkedin"></span></a>
                <a href="@item.Author.Github" class="p-2"><span class="fa fa-github"></span></a>
            </p>
        </div>
    </div>
</div>
}