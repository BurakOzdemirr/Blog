@model IEnumerable<EntityLayer.Concrete.Admin>
<!-- User box -->
<div class="user-box text-center">
    @foreach (var item in Model)
    {
    <img src="@item.AdminImage" alt="user-img" title="Mat Helme"
         class="rounded-circle avatar-md">
    <div class="dropdown">
        <a href="javascript: void(0);" class="text-dark dropdown-toggle h5 mt-2 mb-1 d-block"
           data-toggle="dropdown">@item.AdminName</a>
        <div class="dropdown-menu user-pro-dropdown">

            <!-- item-->
            <a href="/About/UpdateAboutList/" class="dropdown-item notify-item">
                <i class="fe-user mr-1"></i>
                <span>Benim Hesabım</span>
            </a>

            <!-- item-->
            <a href="javascript:void(0);" class="dropdown-item notify-item">
                <i class="fe-settings mr-1"></i>
                <span>Settings</span>
            </a>

            <!-- item-->
            <a href="javascript:void(0);" class="dropdown-item notify-item">
                <i class="fe-lock mr-1"></i>
                <span>Lock Screen</span>
            </a>

            <!-- item-->
            <a href="/User/LogOut/" class="dropdown-item notify-item">
                <i class="fe-log-out mr-1"></i>
                <span>Çıkış Yap</span>
            </a>

        </div>
    </div>
    <p class="text-muted">Admin Kullanıcısı</p>
    }
</div>
